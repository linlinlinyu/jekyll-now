1017. 数位交换
#include<iostream>
using namespace std;
int main()
{
	int n,a,b,c;
	cin>>n;
	a=n/100;
	b=n/10%10;
	c=n%10;
	cout<<c<<b<<a;
	return 0;
}

2151. 字符三角形
#include<iostream>
using namespace std;
int main()
{
	char a;
	cin>>a;
	cout<<"  "<<a<<endl;
	cout<<" "<<a<<a<<a<<endl;
	cout<<a<<a<<a<<a<<a; 
	return 0;
}
